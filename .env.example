# Mission Control Backend Environment Variables
# Copy this file to .env and configure for your environment

# Server
PORT=8080

# Authentication (IMPORTANT: Change JWT_SECRET in production!)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=10

# Data storage
DATA_DIR=./data
# USER_STORE_PATH=./data/users.json  # Or :memory: for testing

# OpenClaw Gateway
GATEWAY_URL=http://localhost:18789
GATEWAY_TIMEOUT=2000

# Development
USE_MOCK_DATA=false

# CORS
CORS_ENABLED=true
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
