# Mission Control Backend Environment Variables
# Copy this file to .env and configure for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080

# =============================================================================
# TLS/HTTPS CONFIGURATION
# =============================================================================
# Enable HTTPS (requires valid certificates)
TLS_ENABLED=false

# Certificate paths (generate with: npm run generate-certs)
TLS_CERT_PATH=./certs/server.crt
TLS_KEY_PATH=./certs/server.key

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret (CRITICAL: Change this in production!)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=10

# Agent Authentication
AGENT_AUTH_ENABLED=true
AGENT_KEYS_FILE=./data/agent-keys.json

# =============================================================================
# DATA STORAGE
# =============================================================================
DATA_DIR=./data
USER_STORE_PATH=./data/users.json

# =============================================================================
# OPENCLAW GATEWAY
# =============================================================================
GATEWAY_URL=http://localhost:18789
GATEWAY_TIMEOUT=2000

# =============================================================================
# DEVELOPMENT
# =============================================================================
USE_MOCK_DATA=false
NODE_ENV=development

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ENABLED=true
# CORS_ORIGIN=https://mission-control.example.com  # Set specific origin in production
CORS_ORIGIN=*

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
